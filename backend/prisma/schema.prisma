generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum MovieStatus {
  COMING_SOON
  NOW_SHOWING
  ARCHIVED
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  firstName String
  lastName  String
  role      UserRole  @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users")
}

model Movie {
  id          String       @id @default(uuid())
  title       String
  description String       @db.Text
  duration    Int
  genre       String
  posterUrl   String?
  trailerUrl  String?
  rating      Float?       @default(0)
  status      MovieStatus  @default(NOW_SHOWING)
  releaseDate DateTime
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("movies")
}