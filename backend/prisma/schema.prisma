generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum MovieStatus {
  COMING_SOON
  NOW_SHOWING
  ARCHIVED
}

enum SeatType {
  STANDARD
  VIP
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  firstName String
  lastName  String
  role      UserRole  @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users")
}

model Movie {
  id          String       @id @default(uuid())
  title       String
  description String       @db.Text
  duration    Int
  genre       String
  posterUrl   String?
  trailerUrl  String?
  rating      Float?       @default(0)
  status      MovieStatus  @default(NOW_SHOWING)
  releaseDate DateTime
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("movies")
}

model Hall {
  id            String     @id @default(uuid())
  name          String     @unique
  totalSeats    Int
  configuration Json
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  seats         Seat[]

  @@map("halls")
}

model Seat {
  id           String        @id @default(uuid())
  hallId       String
  rowNumber    Int
  seatNumber   Int
  type         SeatType      @default(STANDARD)
  createdAt    DateTime      @default(now())
  hall         Hall          @relation(fields: [hallId], references: [id], onDelete: Cascade)

  @@unique([hallId, rowNumber, seatNumber])
  @@map("seats")
}
